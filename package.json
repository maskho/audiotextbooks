{
  "name": "audiotextbooks",
  "version": "0.7.3",
  "description": "Madras Audio-Textbooks",
  "homepage": "https://madras.id/",
  "repository": "mathigon/textbooks",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "server": "mgon-serve",
    "assets": "mgon-build --assets --locales en",
    "watch": "mgon-build --assets --watch --locales en",
    "start": "npm-run-all --parallel watch server",
    "translate": "mgon-build --translate --key google-service-account.json",
    "lint": "eslint content --ext .ts",
    "lint-fix": "eslint content --ext .ts --fix",
    "build": "mgon-build --assets --minify --search",
    "clean": "rm -rf public",
    "dev": "npm-run-all --parallel watch start-dev",
    "thumbnails": "mgon-build --thumbnails",
    "screenshots": "mgon-screenshots --output screenshots",
    "postinstall": "patch-package"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@mathigon/boost": "1.1.0",
    "@mathigon/core": "1.1.0",
    "@mathigon/euclid": "1.1.0",
    "@mathigon/fermat": "1.1.0",
    "@mathigon/hilbert": "1.1.0",
    "@mathigon/studio": "0.1.20",
    "@types/d3": "6.3.0",
    "@types/three": "0.91.14",
    "@types/topojson": "3.2.3",
    "npm-run-all": "4.1.5",
    "patch-package": "^6.4.7",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express-flash": "^0.0.2",
    "@types/node-fetch": "^2.6.1",
    "@types/pug": "^2.0.6",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "8.12.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-import": "2.25.4"
  }
}
